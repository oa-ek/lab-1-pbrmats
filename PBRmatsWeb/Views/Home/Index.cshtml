@using PBRmats.Core.Entities
@model IEnumerable<Material>

@{
    ViewData["Title"] = "Materials";
    var categories = ViewData["Categories"] as IEnumerable<Category>;
    var licenses = ViewData["Licenses"] as IEnumerable<License>;
}

<div class="container-fluid h-100">
    <div class="row flex-grow-1">

        <!-- Left Column -->
        <div class="col-md-3 p-2" style="flex: 0 0 250px; max-width: 250px;">
            <div class="card element h-100">
                <div class="card-header ">
                    Categories
                </div>
                <div class="card-body overflow-auto">
                    @if (categories != null && categories.Any())
                    {
                        <form asp-controller="Home" asp-action="Index" id="categorySelectionForm">
                            @foreach (var category in categories)
                            {
                                <div class="form-check p-0">
                                    <input type="radio" name="categoryId" id="category-@category.Id" value="@category.Id" onchange="submitForm();">
                                    <label class="btn text-light text-start w-100" for="category-@category.Id">
                                        @category.Title
                                    </label>
                                </div>
                            }
                        </form>
                    }
                    else
                    {
                        <p>No categories available.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col p-2">
            <div class="card flex-row row flex-grow-1 m-0 p-2 element overflow-hidden flex-wrap">
                @if (Model != null && Model.Any())
                {
                    <div class="row">
                        @foreach (var material in Model)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center align-items-center mb-2" style="height: 326px;">
                                @material.Title
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>No materials available.</p>
                }
            </div>
        </div>
    </div>
</div>


<script>
    window.onload = function () {
        const selectedCategoryId = localStorage.getItem('selectedCategoryId');
        if (selectedCategoryId) {
            const radio = document.getElementById(`category-${selectedCategoryId}`);
            if (radio) {
                radio.checked = true;
                radio.nextElementSibling.classList.add('outline-button');
            }
        }
    };

    document.getElementById("categorySelectionForm").addEventListener("click", function (e) {
        if (e.target.tagName === "INPUT") {
            const labels = document.querySelectorAll('.form-check label');
            labels.forEach(label => label.classList.remove('outline-button'));

            if (e.target.checked) {
                // If the radio was previously selected, deselect it
                if (localStorage.getItem('selectedCategoryId') === e.target.value) {
                    localStorage.removeItem('selectedCategoryId');
                    e.target.checked = false;
                    window.location.href = "/"; // Refresh without categoryId
                } else {
                    localStorage.setItem('selectedCategoryId', e.target.value);
                    e.target.nextElementSibling.classList.add('outline-button');
                }
            } else {
                localStorage.removeItem('selectedCategoryId');
            }
        }
    });

    function submitForm() {
        const selectedCategoryId = localStorage.getItem('selectedCategoryId');
        const form = document.getElementById('categorySelectionForm');
        if (selectedCategoryId) {
            form.action = `/Home/Index/${selectedCategoryId}`;
        } else {
            form.action = "/Home";
        }
        form.submit();
    }
</script>